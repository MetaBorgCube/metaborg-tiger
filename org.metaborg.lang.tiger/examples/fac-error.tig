/* factorial function; example from SPIM manual */

let function fact(n : int) : int = 
      if n < 1 then 1 else (n * fact(n - 1))
    var x : int := 3
    function power(x : int, x : int) : string = 
      if x = 0 then 1 else power(x - 1, x)
